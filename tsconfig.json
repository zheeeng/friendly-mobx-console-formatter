{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noErrorTruncation": true
  }
}
